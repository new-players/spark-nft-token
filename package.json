{
  "name": "spark-identity-token",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Spark Identity Token",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write .",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js",
    "chain": "hardhat node --network hardhat",
    "deploy:local": "hardhat deploy --tags local --tags-require-all",
    "deploy:goerli": "hardhat deploy --network goerli --tags goerli --tags-require-all",
    "deploy:sepolia": "hardhat deploy --network sepolia --tags sepolia --tags-require-all",
    "deploy:fuji": "hardhat deploy --network fuji --tags fuji --tags-require-all",
    "deploy:baseSepolia": "hardhat deploy --network baseSepolia --tags baseSepolia --tags-require-all",
    "deploy:baseGoerli": "hardhat deploy --network baseGoerli --tags baseGoerli --tags-require-all",
    "deploy:polygon": "hardhat deploy --network polygon --tags polygon --tags-require-all",
    "deploy:ethereum": "hardhat deploy --network ethereum --tags ethereum --tags-require-all",
    "deploy:avalanche": "hardhat deploy --network avalanche --tags avalanche --tags-require-all",
    "deploy:base": "hardhat deploy --network base --tags base --tags-require-all"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@openzeppelin/contracts": "^5.0.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.4.1",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.4",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-interface-generator": "^0.0.6",
    "solidity-coverage": "^0.8.5",
    "solmate": "^6.2.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@tokenbound/sdk": "^0.4.5"
  }
}
